@model IEnumerable<MaerskLine.Models.Ship>

@{
    ViewBag.Title = "Index";
}

<h2>Shipping Schedule</h2>

<p>@Html.ActionLink("Make a booking", "Create", "Books") &emsp; @Html.ActionLink("Manage booking", "Index", "Books")</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShipDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShipName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShipAddress)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShipDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipAddress)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ShipID })
            </td>
        </tr>
    }

</table>


